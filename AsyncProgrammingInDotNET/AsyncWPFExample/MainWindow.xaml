<Window x:Class="AsyncWPFExample.MainWindow"  
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
       Title="MainWindow" Height="450" Width="800">  
   <Grid>  
       <!-- Add the ProgressBar with the name 'LoadingProgressBar' -->  
       <ProgressBar x:Name="LoadingProgressBar"  
                    Visibility="Hidden"  
                    Height="20"  
                    VerticalAlignment="Top"  
                    Margin="10"/>  

       <!-- Add the Button with the name 'LoadDataButton' -->  
       <Button x:Name="LoadDataButton"  
               Content="Load Data"  
               Width="100"  
               Height="30"  
               VerticalAlignment="Top"  
               Margin="10,40,0,0"  
               HorizontalAlignment="Left"  
               Click="LoadDataButton_Click"/>  

       <!-- Add a ListBox to display data -->  
       <ListBox x:Name="DataListBox"  
                Margin="10,80,10,10"/>  
   </Grid>  
</Window>
